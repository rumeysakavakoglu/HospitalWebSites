@model List<$safeprojectname$.Models.acildurum>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acil Durumlar</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Başlıklar */
        h1 {
            text-align: center;
            font-size: 48px;
            color: #d9534f;
            margin-top: 20px;
            text-transform: uppercase;
        }

   

        /* Acil Durumlar İçin Dikkat Çekici Arka Plan */
        .emergency-alert {
            position: relative;
            top: 0;
            left: 0;
            width: 100%;
            background-color: red;
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 24px;
            font-weight: bold;
            letter-spacing: 2px;
            text-transform: uppercase;
            z-index: 1000;
            text-shadow: 2px 2px 4px #000;
        }

            .emergency-alert .icon {
                margin: 0 10px;
                font-size: 28px;
            }
            p{
                font-size:20px;
            }

    </style>
</head>
<body>

    <div class="emergency-alert" id="emergencyAlert">
        <span class="icon">🚨</span>
        @if (Model != null && Model.Any())
        {
            <div class="alert-info">
                @Model.First().bildirim
            </div>
        }
        else
        {
            <div class="alert-info">
                Henüz bir acil durum mesajı eklenmedi.
            </div>
        }
        <span class="icon">🚨</span>
    </div>
 <p>HASTANE YÖNETMELİK KARARLARINCA UYARIYI GÖREN ÇALIŞANLARIN GEREĞİNİ YAPMASINI RİCA EDERİZ.</p>

 

</body>
</html>