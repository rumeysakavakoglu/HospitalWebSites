@model List<$safeprojectname$.Models.gorevli>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Bölüm</th>
            <th>tarih</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ad</td>
                <td>@item.bölüm</td>
                <td>@item.tarih</td>
                <td>@item.güncelle </td>
                <td>
                    <button class="btn btn-danger btn-custom" data-id="@item.id">
                        Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Sol Alta Yerleştirilen Buton -->
<button class="btn btn-primary add-button" data-toggle="modal" data-target="#guncelleModal">
    Yeni Hoca Ekle
</button>
