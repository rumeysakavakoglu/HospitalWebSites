@model List<$safeprojectname$.Models.asistan>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Telefon Numarası</th>
            <th>E-mail</th>
            <th>İşlem</th>
       
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ad</td>
                <td>@item.soyad</td>
                <td>@item.telefon</td>
                <td>@item.email</td>

                <td>
                    <button class="btn btn-danger btn-custom" data-id="@item.id">
                        Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Sol Alta Yerleştirilen Buton -->
<button class="btn btn-primary add-button" data-toggle="modal" data-target="#guncelleModal">
    Yeni Asistan Ekle
</button>
